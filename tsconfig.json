{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types", "admin/src/types/global.d.ts"],
  },
  "include": [
    "admin/**/*.ts",
    "admin/**/*.tsx",
    "admin/**/*.json",
    "package.json",
    "server/**/*.ts"
  ],

  "exclude": [
    "node_modules/",
    "dist/",
    // Do not include test files
    "**/*.test.ts"
  ]
}
